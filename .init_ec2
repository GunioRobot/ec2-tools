# .init_ec2 - This should hold all your stuff regarding keys and paths

# Path to EC2 binaries (leave out the last /bin)
# Download from http://aws.amazon.com/developertools/351?_encoding=UTF8&jiveRedirect=1
export EC2_HOME=~/aws

# Add EC2 stuff to PATH
export PATH=$PATH:$EC2_HOME/bin

# Your cert goes here (download from the AWS site)
export EC2_CERT=$EC2_HOME/cert-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX.pem

# Private key here (download from the AWS site)
export EC2_PRIVATE_KEY=$EC2_HOME/pk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX.pem

# You can find this by doing ls -l `which java` | awk '{print $11;}'
export JAVA_HOME=`/System/Library/Frameworks/JavaVM.framework/Versions/Current/Commands/java_home`
